{
    "name": "Better Image Preview",
    "version": "1.0.0",
    "description": "Chrome extension for simple image preview customization.",
    "manifest_version": 2,
    "permissions": [
        "storage",
        "activeTab"
    ],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*jpg*",
                "*://*/*png*",
                "*://*/*gif*",
                "*://*/*webp*",
                "*://*/*svg*",
                "*://*/*bmp*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}